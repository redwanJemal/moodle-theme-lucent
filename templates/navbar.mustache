{{!
    @template theme_lucent/navbar

    Lucent premium navbar with glass effect and improved mobile hamburger.

    Example context (json):
    {
        "output": {
            "should_display_navbar_logo": true,
            "get_compact_logo_url": "http://placekitten.com/50/50",
            "custom_menu": "<li>..</li>",
            "page_heading_menu": "<li>..</li>",
            "search_box": "<div><input type='text'></div>",
            "navbar_plugin_output": "<div class='dropdown'>Messaging</div>",
            "user_menu": "<div class='dropdown'>John Doe</div>"
        },
        "config": {
            "wwwroot": "#",
            "homeurl": "/my/"
        },
        "sitename": "Moodle Site",
        "mobileprimarynav": []
    }
}}
<nav class="navbar fixed-top navbar-light navbar-expand lucent-navbar" aria-label="{{#str}}sitemenubar, admin{{/str}}">
    <div class="container-fluid lucent-navbar-inner">
        {{! ── Mobile hamburger with animated icon ── }}
        <button class="navbar-toggler lucent-hamburger aabtn d-block d-md-none px-1 my-1 border-0"
                data-toggler="drawers" data-action="toggle"
                data-target="theme_boost-drawers-primary"
                aria-label="{{#str}}sidepanel, core{{/str}}">
            <span class="lucent-hamburger-box">
                <span class="lucent-hamburger-line"></span>
                <span class="lucent-hamburger-line"></span>
                <span class="lucent-hamburger-line"></span>
            </span>
            <span class="sr-only">{{#str}}sidepanel, core{{/str}}</span>
        </button>

        {{! ── Brand / Logo ── }}
        <a href="{{{ config.homeurl }}}" class="navbar-brand d-flex align-items-center m-0 me-4 p-0 aabtn lucent-brand">
            {{# output.should_display_navbar_logo }}
                <img src="{{output.get_compact_logo_url}}" class="lucent-logo me-2" alt="{{sitename}}">
            {{/ output.should_display_navbar_logo }}
            {{^ output.should_display_navbar_logo }}
                <span class="lucent-site-name">{{{ sitename }}}</span>
            {{/ output.should_display_navbar_logo }}
        </a>

        {{! ── Primary navigation ── }}
        {{#primarymoremenu}}
            <div class="primary-navigation d-none d-md-flex">
                {{> core/moremenu}}
            </div>
        {{/primarymoremenu}}

        {{# output.page_heading_menu}}
            <ul class="navbar-nav d-none d-lg-flex my-1 px-1">
                {{{ output.page_heading_menu }}}
            </ul>
        {{/output.page_heading_menu}}

        {{! ── Right side: search, lang, user ── }}
        <div id="usernavigation" class="navbar-nav ms-auto h-100 lucent-user-nav">
            {{# output.search_box }}
                <div class="lucent-search-wrapper d-none d-md-flex align-items-center">
                    {{{ output.search_box }}}
                </div>
                <div class="divider border-start h-75 align-self-center mx-1 d-none d-md-block"></div>
            {{/output.search_box}}

            {{! Mobile search button }}
            {{# output.search_box }}
                <button class="btn btn-icon lucent-mobile-search d-md-none" data-action="toggle-search" aria-label="Search">
                    <i class="fa fa-search"></i>
                </button>
            {{/output.search_box}}

            {{#langmenu}}
                {{> theme_boost/language_menu }}
                <div class="divider border-start h-75 align-self-center mx-1 d-none d-md-block"></div>
            {{/langmenu}}

            {{{ output.navbar_plugin_output }}}

            <div class="d-flex align-items-stretch usermenu-container" data-region="usermenu">
                {{#usermenu}}
                    {{> core/user_menu }}
                {{/usermenu}}
            </div>
            {{{ output.edit_switch }}}
        </div>
    </div>
</nav>

{{> theme_lucent/primary-drawer-mobile }}
