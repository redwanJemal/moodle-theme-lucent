{{!
    @template theme_lucent/footer

    Lucent premium footer — modern, minimal with social links and multi-column layout.

    Example context (json):
    {
        "output": {
            "page_doc_link": "Documentation for this page",
            "supportemail": "<a href=\"#\">Contact site support</a>",
            "has_popover_links": true,
            "login_info": "You are logged in as cute kitten",
            "moodle_release": "4.4"
        }
    }
}}

<footer id="page-footer" class="lucent-footer">
    {{! ── Main footer content ── }}
    <div class="lucent-footer-main">
        <div class="container-fluid">
            <div class="row">
                {{! ── Column 1: Brand & About ── }}
                <div class="col-12 col-md-6 col-lg-4 lucent-footer-col">
                    <div class="lucent-footer-brand">
                        <h5 class="lucent-footer-heading">{{{ sitename }}}</h5>
                        <p class="lucent-footer-desc">
                            Empowering learning through beautiful, modern design. Built with care for educators and learners.
                        </p>
                    </div>
                    {{! ── Social Links ── }}
                    <div class="lucent-social-links">
                        <a href="#" class="lucent-social-link" aria-label="Facebook" data-social="facebook">
                            <i class="fa fa-facebook"></i>
                        </a>
                        <a href="#" class="lucent-social-link" aria-label="Twitter" data-social="twitter">
                            <i class="fa fa-twitter"></i>
                        </a>
                        <a href="#" class="lucent-social-link" aria-label="Instagram" data-social="instagram">
                            <i class="fa fa-instagram"></i>
                        </a>
                        <a href="#" class="lucent-social-link" aria-label="LinkedIn" data-social="linkedin">
                            <i class="fa fa-linkedin"></i>
                        </a>
                        <a href="#" class="lucent-social-link" aria-label="YouTube" data-social="youtube">
                            <i class="fa fa-youtube-play"></i>
                        </a>
                    </div>
                </div>

                {{! ── Column 2: Support Links ── }}
                <div class="col-6 col-md-3 col-lg-2 lucent-footer-col">
                    <h6 class="lucent-footer-heading-sm">Support</h6>
                    <ul class="lucent-footer-links">
                        {{# output.page_doc_link }}
                            <li>{{{ output.page_doc_link }}}</li>
                        {{/ output.page_doc_link }}
                        {{# output.services_support_link }}
                            <li>{{{ output.services_support_link }}}</li>
                        {{/ output.services_support_link }}
                        {{# output.supportemail }}
                            <li>{{{ output.supportemail }}}</li>
                        {{/ output.supportemail }}
                    </ul>
                </div>

                {{! ── Column 3: Quick links ── }}
                <div class="col-6 col-md-3 col-lg-2 lucent-footer-col">
                    <h6 class="lucent-footer-heading-sm">Quick Links</h6>
                    <ul class="lucent-footer-links">
                        <li><a href="{{{ config.wwwroot }}}/my/">Dashboard</a></li>
                        <li><a href="{{{ config.wwwroot }}}/calendar/view.php">Calendar</a></li>
                        <li><a href="{{{ config.wwwroot }}}/course/">Courses</a></li>
                    </ul>
                </div>

                {{! ── Column 4: Login info ── }}
                <div class="col-12 col-lg-4 lucent-footer-col lucent-footer-meta">
                    <h6 class="lucent-footer-heading-sm">Account</h6>
                    <div class="lucent-footer-login-info">
                        {{{ output.login_info }}}
                    </div>
                    <div class="tool_usertours-resettourcontainer"></div>
                    {{{ output.standard_footer_html }}}
                </div>
            </div>
        </div>
    </div>

    {{! ── Bottom bar ── }}
    <div class="lucent-footer-bottom">
        <div class="container-fluid d-flex flex-column flex-md-row justify-content-between align-items-center">
            <div class="lucent-footer-copyright">
                &copy; {{#str}}poweredbymoodle, core{{/str}}
                {{#output.moodle_release}}
                    &middot; {{{ output.moodle_release }}}
                {{/output.moodle_release}}
            </div>
            <div class="lucent-footer-theme-credit">
                Designed with <span class="lucent-heart">&hearts;</span> by Lucent Theme
            </div>
        </div>
    </div>

    {{{ output.standard_end_of_body_html }}}

    {{! ── Communication button ── }}
    {{#output.has_communication_links}}
        <button onclick="window.open('{{output.communication_url}}', '_blank', 'noreferrer')"
                class="btn lucent-fab-communication"
                aria-label="{{#str}}communicationroomlink, course{{/str}}">
            {{#pix}}t/messages-o, core{{/pix}}
        </button>
    {{/output.has_communication_links}}

    {{! ── Debug footer ── }}
    <div class="footer-content-debugging footer-dark bg-dark text-light">
        <div class="container-fluid footer-dark-inner">
            {{{ output.debug_footer_html }}}
        </div>
    </div>
</footer>
