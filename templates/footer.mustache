}}

<footer id="page-footer" class="lucent-footer">
    <div class="lucent-footer-main">
        <div class="container-fluid">
            <div class="lucent-fp-footer-grid">
                {{! Column 1: Brand }}
                <div class="lucent-fp-footer-brand">
                    <h5 class="lucent-footer-heading">{{{ sitename }}}</h5>
                    <p class="lucent-footer-desc">
                        Empowering learning through beautiful, modern design. Built with care for educators and learners.
                    </p>
                    <div class="lucent-social-links">
                        <a href="#" class="lucent-social-link" aria-label="Facebook"><i class="fa fa-facebook"></i></a>
                        <a href="#" class="lucent-social-link" aria-label="Twitter"><i class="fa fa-twitter"></i></a>
                        <a href="#" class="lucent-social-link" aria-label="Instagram"><i class="fa fa-instagram"></i></a>
                        <a href="#" class="lucent-social-link" aria-label="LinkedIn"><i class="fa fa-linkedin"></i></a>
                        <a href="#" class="lucent-social-link" aria-label="YouTube"><i class="fa fa-youtube-play"></i></a>
                    </div>
                </div>

                {{! Column 2: Support }}
                <div>
                    <h6 class="lucent-footer-heading-sm">Support</h6>
                    <ul class="lucent-footer-links">
                        {{# output.page_doc_link }}
                            <li>{{{ output.page_doc_link }}}</li>
                        {{/ output.page_doc_link }}
                        {{# output.supportemail }}
                            <li>{{{ output.supportemail }}}</li>
                        {{/ output.supportemail }}
                    </ul>
                </div>

                {{! Column 3: Quick Links }}
                <div>
                    <h6 class="lucent-footer-heading-sm">Quick Links</h6>
                    <ul class="lucent-footer-links">
                        <li><a href="{{{ config.wwwroot }}}">Home</a></li>
                        <li><a href="{{{ config.wwwroot }}}/course/">Courses</a></li>
                        <li><a href="{{{ config.wwwroot }}}/my/">Dashboard</a></li>
                        <li><a href="{{{ config.wwwroot }}}/calendar/view.php">Calendar</a></li>
                    </ul>
                </div>

                {{! Column 4: Account }}
                <div>
                    <h6 class="lucent-footer-heading-sm">Account</h6>
                    <div class="lucent-footer-login-info">
                        {{{ output.login_info }}}
                    </div>
                    <div class="tool_usertours-resettourcontainer"></div>
                    {{{ output.standard_footer_html }}}
                </div>
            </div>
        </div>
    </div>

    <div class="lucent-footer-bottom">
        <div class="container-fluid" style="display:flex;justify-content:space-between;align-items:center;flex-wrap:wrap;gap:8px;">
            <div class="lucent-footer-copyright">
                &copy; {{#str}}poweredbymoodle, core{{/str}}
            </div>
            <div class="lucent-footer-theme-credit">
                Designed with <span class="lucent-heart">&hearts;</span> by Lucent Theme
            </div>
        </div>
    </div>

    {{{ output.standard_end_of_body_html }}}
</footer>
